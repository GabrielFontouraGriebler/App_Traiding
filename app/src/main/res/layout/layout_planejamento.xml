<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewDataInicialPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Inicial" />
        <Space
            android:layout_width="80dp"
            android:layout_height="wrap_content"></Space>
        <TextView
            android:id="@+id/textViewDataFinalPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Final" />

        <Space
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewSaldoPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo R$: " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewPorceentagemPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Porcentagem:" />

        <Space
            android:layout_width="61dp"
            android:layout_height="wrap_content"></Space>

        <TextView
            android:id="@+id/textViewPerdaPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pretenção de perda R$: " />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewGanhoPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pretenção de ganho R$: " />
    </LinearLayout>
</LinearLayout>